}

<h4>Details</h4>
<hr />
<div>

    <div class="container">
        <div class="panel panel-info">
            <div class="panel-heading"><h3>Module:  @Html.DisplayFor(model => model.ModuleId) </h3></div>
            <div class="panel-body" style="width:500px;">

                <dl class="dl-horizontal">

                    <dt>
                        <h4>  @Html.DisplayNameFor(model => model.Description) </h4> </dt>

                    <dd>
                        <h4>    @Html.DisplayFor(model => model.Description)</h4> </dd>

                    <dt>
                        <h5> @Html.DisplayNameFor(model => model.MaxCount)</h5>  </dt>

                    <dd>
