                    <dt>
                        <h5>   @Html.DisplayNameFor(model => model.MaxLecPanel)</h5> </dt>

                    <dd>
                        <h5>@Html.DisplayFor(model => model.MaxLecPanel)</h5>  </dd>

                </dl>
            </div>
