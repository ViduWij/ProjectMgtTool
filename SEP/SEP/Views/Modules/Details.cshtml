                    <dt>
                        <h5> @Html.DisplayNameFor(model => model.Year)</h5>    </dt>

                    <dd>
                        <h5> @Html.DisplayFor(model => model.Year)</h5>     </dd>

                    <dt>
                        <h5> @Html.DisplayNameFor(model => model.semester)</h5>    </dt>

                    <dd>
                        <h5> @Html.DisplayFor(model => model.semester)</h5>    </dd>

                    <dt>
                        <h5>  @Html.DisplayNameFor(model => model.LecturerIncharge)</h5>    </dt>

                    <dd>
                        <h5> @if (Model.LecturerIncharge == null)
                        {
                            @Html.Raw("N/A")

                        }
